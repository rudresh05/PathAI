<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintBottom_toBottomOf="@+id/bio_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bio_data"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/bio_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="184dp"
        android:text="Bio- Data"
        android:textColor="#181D27"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/editProfileImgCardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@+id/bio_data"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bio_data"
        app:layout_constraintTop_toBottomOf="@+id/bio_data">

        <ImageView
            android:id="@+id/editProfileImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/person" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/editProfileName"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:text="Rudresh Suryavanshi"
        android:textColor="#181D27"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editProfileImgCardView"
        app:layout_constraintStart_toStartOf="@+id/editProfileImgCardView"
        app:layout_constraintTop_toBottomOf="@+id/editProfileImgCardView" />

    <TextView
        android:id="@+id/editProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Rudreshpatel504@gmail.com"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/editProfileName"
        app:layout_constraintStart_toStartOf="@+id/editProfileName"
        app:layout_constraintTop_toBottomOf="@+id/editProfileName" />

    <EditText
        android:id="@+id/editProfileTextFirstName"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:hint="What's your first name"
        android:background="@drawable/edittextshape"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingTop="18dp"
        android:paddingEnd="9dp"
        android:paddingBottom="18dp"
        android:textColor="#555555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfileEmail" />

    <EditText
        android:id="@+id/editProfileTextLastName"
        android:layout_width="0dp"
        android:layout_height="54dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/edittextshape"
        android:elevation="4dp"
        android:hint="And your last name"
        android:paddingStart="16dp"
        android:paddingTop="18dp"
        android:paddingEnd="9dp"
        android:paddingBottom="18dp"
        android:textColor="#555555"
        app:layout_constraintEnd_toEndOf="@+id/editProfileTextFirstName"
        app:layout_constraintStart_toStartOf="@+id/editProfileTextFirstName"
        app:layout_constraintTop_toBottomOf="@+id/editProfileTextFirstName" />

    <EditText
        android:id="@+id/editProfilePhoneNo"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextshape"
        android:elevation="4dp"
        android:hint="Phone number"
        android:paddingStart="16dp"
        android:inputType="number"
        android:paddingTop="18dp"
        android:paddingEnd="9dp"
        android:paddingBottom="18dp"
        android:textColor="#555555"
        app:layout_constraintEnd_toEndOf="@+id/editProfileTextLastName"
        app:layout_constraintStart_toStartOf="@+id/editProfileTextLastName"
        app:layout_constraintTop_toBottomOf="@id/editProfileTextLastName" />

    <EditText
        android:id="@+id/editProfileGender"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextshape"
        android:elevation="4dp"
        android:hint="Select your gender"
        android:paddingStart="16dp"
        android:paddingTop="18dp"
        android:paddingEnd="9dp"
        android:drawableEnd="@drawable/down_arrow"
        android:entries="@array/gender_array"
        android:spinnerMode="dropdown"
        android:paddingBottom="18dp"
        android:textColor="#555555"
        app:layout_constraintEnd_toEndOf="@+id/editProfilePhoneNo"
        app:layout_constraintStart_toStartOf="@id/editProfilePhoneNo"
        app:layout_constraintTop_toBottomOf="@id/editProfilePhoneNo" />

    <EditText
        android:id="@+id/editProfileDob"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:hint="What is your date of birth"
        android:background="@drawable/edittextshape"
        android:elevation="4dp"
        android:drawableEnd="@drawable/calendar"
        android:paddingStart="16dp"
        android:paddingTop="18dp"
        android:paddingEnd="9dp"
        android:paddingBottom="18dp"
        android:textColor="#555555"
        app:layout_constraintStart_toStartOf="@id/editProfileGender"
        app:layout_constraintEnd_toEndOf="@id/editProfileGender"
        app:layout_constraintTop_toBottomOf="@id/editProfileGender" />

    <Button
        android:id="@+id/editProfileUploadButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/upload_button_editprofile"
        android:text="Update Profile"
        app:layout_constraintEnd_toEndOf="@+id/editProfileDob"
        app:layout_constraintStart_toStartOf="@+id/editProfileDob"
        app:layout_constraintTop_toBottomOf="@+id/editProfileDob" />

</androidx.constraintlayout.widget.ConstraintLayout>